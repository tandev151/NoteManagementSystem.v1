<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <EditText
        android:id="@+id/edtNameNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:hint="Enter note name"
        android:layout_margin="5dp"/>

    <Spinner
        android:id="@+id/spCategory"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:spinnerMode="dropdown"
        android:layout_margin="5dp"
        android:entries="@array/listCategory"

        />

    <Spinner
        android:id="@+id/spPriority"
        android:entries="@array/listPriority"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:spinnerMode="dropdown"
        android:layout_margin="5dp"

        />

    <Spinner
        android:id="@+id/spStatus"
        android:entries="@array/listStatus"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:spinnerMode="dropdown"
        android:layout_margin="5dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tvPlanDateNew"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Select plan date"
            android:layout_margin="5dp"
            android:paddingLeft="10dp"
            android:textSize="16dp"
            android:layout_centerVertical="true"/>

        <Button
            android:id="@+id/btnPlanDate"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:gravity="center_horizontal"
            android:layout_alignParentEnd="true"
            android:textAlignment="center"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/teal_200"
            android:text="..." />
    </RelativeLayout>

